{
    "compilerOptions": {
      "allowJs": true,
      "jsx": "react",
      "target": "es2017",
      "module": "esnext",
      "moduleResolution": "node",
      "importHelpers": true,
      "isolatedModules": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "esModuleInterop":true,
      "allowSyntheticDefaultImports":true,
      "types": ["vite/client"],     
    },
    "include": [
      "./src/**/*.tsx",
      "./src/assets/config/*.json"
    ],
    "exclude": ["node_modules", "@/assets/*"]
  }